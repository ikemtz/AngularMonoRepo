{
  "name": "imng-auth0-oidc",
  "version": "0.7.9",
  "description": "Small library to facilitate the integration of the ng-oidc-client library with the Auth0 identity provider.",
  "author": "Isaac Martinez <@ikemtz>",
  "license": "MIT",
  "scripts": {
    "build": "ng-packagr -p ng-package.json",
    "copyPackageJson": "cp package.json dist",
    "postinstall": "cp -v ../../node_modules/oidc-client/dist/* ./src/assets/"
  },
  "dependencies": {
    "@angular/common": "^11.x",
    "@angular/core": "^11.x",
    "oidc-client": "^1.x",
    "@ngrx/store": ">=10.x",
    "@ngrx/effects": ">=10.x",
    "imng-ngrx-utils": "^3.x"
  },
  "ngPackage": {
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "lib": {
      "entryFile": "src/index.ts"
    },
    "dest": "../../dist/libs/imng-auth0-oidc"
  },
  "devDependencies": {
    "ng-packagr": ">=11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ikemtz/Nurser.git"
  }
}

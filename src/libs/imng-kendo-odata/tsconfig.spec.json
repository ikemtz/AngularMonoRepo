{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "preserve",
    "types": ["jest", "node"],
    "target": "es2016",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": false

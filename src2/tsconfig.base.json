      "imng-kendo-odata": ["libs/imng-kendo-odata/src/index.ts"],
      "imng-ngrx-utils": ["libs/imng-ngrx-utils/src/index.ts"],
      "imng-ngrx-utils/testing": ["libs/imng-ngrx-utils/testing/src/index.ts"],
      "imng-nrsrx-client-utils": ["libs/imng-nrsrx-client-utils/src/index.ts"]
